{
  "compilerOptions": {
      "outDir": "dist",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "module": "CommonJS",
      "target": "es2021",
      "esModuleInterop": true,
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"],
        "@/tests/*": ["../tests/*"]
      },
      "strict": true
  },
  "include": [
      "src",
      "tests"
  ]
}
