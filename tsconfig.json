{
  "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "module": "CommonJS",
      "target": "es2021",
      "esModuleInterop": true,
      "baseUrl": "src",
      "paths": {
        "@/*": ["*"],
        "@/tests/*": ["../test/*"]
      },
      "strict": true,

  },
  "include": [
      "src",
      "tests"
  ],
  // "exclude": [
  //     "**/*.spec.ts",
  //     "**/*.test.ts",
  // ],
}